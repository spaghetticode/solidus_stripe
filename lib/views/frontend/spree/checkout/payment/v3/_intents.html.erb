<%= render 'spree/checkout/payment/v3/form_elements', payment_method: payment_method %>

<script src="/assets/frontend/stripe_init.js"></script>
<script src="/assets/frontend/intents_init.js"></script>

<script>
  var cardNumber = initElements();
  var paymentRequest = setUpPaymentRequest(Spree.stripePaymentMethod.config.payment_request);

  Spree.stripePaymentMethod.form.bind('submit', function(event) {
    if (Spree.stripePaymentMethod.element.is(':visible')) {
      event.preventDefault();

      Spree.stripePaymentMethod.errorElement.text('').hide();

      Spree.Stripe.api.createPaymentMethod(
        'card',
        cardNumber
      ).then(function(result) {
        handlePayment(result);
      });
    }
  });

  function handlePayment(payment) {
    if (payment.error) {
      showError(payment.error.message);
    } else {
      stripeTokenHandler(payment.paymentMethod);
      fetch('/stripe/confirm_payment', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          spree_payment_method_id: Spree.stripePaymentMethod.config.id,
          stripe_payment_method_id: payment.paymentMethod.id,
          authenticity_token: Spree.stripePaymentMethod.authToken
        })
      }).then(function(response) {
        response.json().then(function(json) {
          handleServerResponse(json, payment);
        })
      });
    }
  };

  function submitPayment(_payment) {
    Spree.stripePaymentMethod.form.unbind('submit').submit();
  }
</script>
